extends layout.jade

block content
	br
	br
	br
	.container(style='max-width: 400px')
		form.form-signin(action='/register', method='post')
			h2.form-signin-heading Registration
			label.sr-only(for='inputFirstName') First name
			input#inputEmail.form-control(type='text', name='firstName', placeholder='First name', required='', autofocus='')
			label.sr-only(for='inputLastName') Last name
			input#inputPassword.form-control(type='text', name='lastName', placeholder='Last name', required='')
			label.sr-only(for='inputEmail') Email address
			input#inputEmail.form-control(type='email', name='email',placeholder='Email address', required='', autofocus='')
			label.sr-only(for='inputPassword') Password
			input#inputPassword.form-control(type='password' name='password', placeholder='Password', required='')
			button.btn.btn-lg.btn-primary.btn-block(type='submit',style='background-color: #CE090D; border-color: #F8F8F8') Register
